/* pages/result/result.wxss */
.section{
  margin-bottom: 10rpx;
  border-bottom: 5rpx solid #aaa;
}
.result-header{
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.result-header image{
  width:260rpx;
  height: 152rpx;
}

.result-header-text{
  height: 200rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 40rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx; 
}

.team-name{
  display: flex;
  justify-content: center;
  width: 40%;
}

.result-score{
  width: 100%;
  position: absolute;
  top:130rpx;
  display: flex;
  justify-content: space-around;
}

.result-score text{
  color: palevioletred;
  font-weight: bold;
  font-size: 50rpx;
}

.result-winner{
  height: 50rpx;
  margin-left: 10%;
  margin-right: 10%;
  margin-bottom: 5rpx;
  width: 80%;
  display: flex;
  justify-content: space-between;
  align-items: top;
  font-size: 40rpx;
  position: absolute;
  top: 40rpx;
  left: 0rpx; 
}
/* .winner-icon{
  width: 150rpx;
  height: 50rpx;
  margin-bottom: 40rpx;
} */

.winner-icon image{
  width: 120rpx;
  height: 30rpx;
}

.stats{
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top:20rpx;
  /* border-top:5rpx solid #aaa; */
}

.stats-team{
  width: 46%;
  display: flex;
  justify-content: space-between;
}

.table {
  font-size: 20rpx;
  border:1rpx solid #dadada;
  border-right: 0;
  border-bottom: 0;
  /* border-left: 0; */
  width: 100%;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,.td {
  padding: 10rpx;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%
}
.th {
  font-weight: 400;
  background-color: #dadada
}

.match{
  margin-top: 5rpx;
  border-top: 5rpx solid #aaa;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.match-info{
  height: 35rpx;
  width: 45%;
  margin-top:20rpx;
  margin-left: 2%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #999
}

.match-info-text{
  font-size: 20rpx;
  margin-right: 10rpx;
}

.match-info-image{
  height: 35rpx;
  width: 35rpx;
}